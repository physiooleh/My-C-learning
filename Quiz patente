  // tutaj dopisujesz więcej pytań falso
    };
    for (const auto& testo : domande_false) {
        domande.push_back({testo, "falso"});
    }

    // Generator losowy
    random_device rd;
    mt19937 g(rd());
    shuffle(domande.begin(), domande.end(), g);

    string risposta_utente;

    // Quiz losowy
    for (const auto& d : domande) {
        cout << d.testo << " (vero/falso): ";
        cin >> risposta_utente;

        for (char &c : risposta_utente) c = tolower(c);

        if (risposta_utente == d.risposta_giusta) {
            cout << "Corretto!\n\n";
        } else {
            cout << "Sbagliato! La risposta giusta era '" << d.risposta_giusta << "'.\n\n";
        }
    }

    cout << "Quiz finito!\n";
}
