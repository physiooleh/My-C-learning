#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <random>
using namespace std;

struct Domanda {
    string testo;
    string risposta_giusta; // "vero" lub "falso"
};

int main() {
    // Tworzymy wektor pytań typu Domanda
    vector<Domanda> doman

